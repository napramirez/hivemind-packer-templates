{
  "variables": {
    "iso_url": "http://releases.ubuntu.com/14.04/ubuntu-14.04.3-server-amd64.iso",
    "iso_checksum": "9e5fecc94b3925bededed0fdca1bd417",
    "iso_checksum_type": "md5",
    "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
    "boot_wait": "10s",
    "disk_size": "81920",
    "headless": "true",
    "http_directory": "http",
    "vm_name": "packer-ubuntu-14.04-amd64",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "10000s",
    "memory_in_mb": "512",
    "cpu_cores": "2"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "Ubuntu_64",

      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz",
        " auto=true",
        " priority=critical",
        " initrd=/install/initrd.gz",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
        " -- ",
        "<enter>"
      ],
      "boot_wait": "{{user `boot_wait`}}",
      "disk_size": "{{user `disk_size`}}",
      "headless": "{{user `headless`}}",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "http_directory": "{{user `http_directory`}}",
      "vm_name": "{{user `vm_name`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
      "shutdown_command": "{{user `shutdown_command`}}",

      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "{{user `memory_in_mb`}}" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "{{user `cpu_cores`}}" ]
      ]
    },
    {
      "type": "vmware-iso",
      "guest_os_type": "ubuntu-64",

      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz",
        " auto=true",
        " priority=critical",
        " initrd=/install/initrd.gz",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
        " -- ",
        "<enter>"
      ],
      "boot_wait": "{{user `boot_wait`}}",
      "disk_size": "{{user `disk_size`}}",
      "headless": "{{user `headless`}}",
      "iso_urls": "{{user `iso_url`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "http_directory": "{{user `http_directory`}}",
      "vm_name": "{{user `vm_name`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
      "shutdown_command": "{{user `shutdown_command`}}",

      "output_directory": "packer-ubuntu-14.04-amd64-vmware",
      "tools_upload_flavor": "linux",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "memsize": "{{user `memory_in_mb`}}",
        "numvcpus": "{{user `cpu_cores`}}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/setup.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/install-guestadditions.sh",
      "only": ["virtualbox-iso"]
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/install-vagrant-ssh-pubkey.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/cleanup.sh"
    }
  ],
  "post-processors": [
    [{
      "type": "vagrant",
      "output": "builds/ubuntu-14.04-server-amd64-{{.Provider}}.box"
    },
    {
      "type": "atlas",
      "artifact": "napramirez/ubuntu-14.04-server-amd64",
      "artifact_type": "vagrant.box",
      "metadata": {
        "provider": "{{.Provider}}",
        "version": "1.1.0"
      }
    }]
  ]
}
